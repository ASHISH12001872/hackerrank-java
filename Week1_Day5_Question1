import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
             int result;
        Scanner scan = new Scanner(System.in);
        int four = scan.nextInt();
        int six = scan.nextInt();
        int four_f = 4*four;
        int six_f = 6*six;
        result = (four_f+six_f);
        System.out.println(result);
        
    }
}
